<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/beautiful_item_selector" />
    <item
        android:gravity="top|right"
        android:right="-40dp"
        android:top="-40dp">
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:gravity="left|bottom"
        android:left="5dp">
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</layer-list>