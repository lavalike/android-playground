<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.circle.CircleImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="重置" />

        <Button
            android:id="@+id/btn_oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="椭圆" />

        <Button
            android:id="@+id/btn_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆角" />

        <com.android.exercise.ui.activity.circle.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_dog" />

        <com.android.exercise.ui.activity.circle.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_dog"
            app:oval="true" />

        <com.android.exercise.ui.activity.circle.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_dog"
            app:radius="20dp" />

        <com.android.exercise.ui.activity.circle.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_dog"
            app:radius_bottom_right="20dp"
            app:radius_top_left="20dp" />

        <com.android.exercise.ui.activity.circle.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_dog"
            app:radius_bottom_left="100dp"
            app:radius_top_left="100dp"
            app:radius_top_right="100dp" />

    </LinearLayout>
</ScrollView>