<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.bitmap.BitmapOptimizeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原图" />

        <com.wangzhen.circle.CircleImageView
            android:id="@+id/iv_raw"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:radius="3.5dp" />

        <TextView
            android:id="@+id/tv_in_sample_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="修改采样率" />

        <com.wangzhen.circle.CircleImageView
            android:id="@+id/iv_in_sample_size"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:radius="3.5dp" />

        <TextView
            android:id="@+id/tv_in_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="内存重用" />

        <com.wangzhen.circle.CircleImageView
            android:id="@+id/iv_in_bitmap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:radius="3.5dp" />

    </LinearLayout>

</ScrollView>