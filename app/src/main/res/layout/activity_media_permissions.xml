<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.android13.NewPermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/new_permission_explain"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_revoke_all"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_revoke_all"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_external_storage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/permission_external_storage"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_images"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_media_images"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_video"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_media_video"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_audio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_media_audio"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_nearby_wifi_devices"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_nearby_wifi_devices"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_body_sensors"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_body_sensors"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_pick_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/new_permission_pick_image"
            android:textColor="@color/color_text_color" />

    </LinearLayout>

</ScrollView>