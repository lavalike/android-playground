<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.android13.MediaPermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimary"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/media_permission_explain"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_external_storage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/media_permission_external_storage"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_images"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/media_permission_images"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_video"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/media_permission_video"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_media_audio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/media_permission_audio"
            android:textColor="@color/color_text_color" />

        <TextView
            android:id="@+id/btn_pick_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/media_permission_pick_image"
            android:textColor="@color/color_text_color" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:src="@mipmap/bg_dog" />

    </LinearLayout>

</ScrollView>