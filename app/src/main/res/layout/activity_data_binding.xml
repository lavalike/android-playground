<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.android.exercise.ui.activity.jetpack.databinding.User" />

        <variable
            name="handlers"
            type="com.android.exercise.ui.activity.jetpack.databinding.ClickHandlers" />


        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.activity.jetpack.databinding.DataBindingActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="绑定" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@{user.lastName}"
            android:textSize="25sp"
            tools:text="姓" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@{user.firstName}"
            android:textSize="25sp"
            tools:text="名" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:onClick="@{handlers::onClickAge}"
            android:text="@{String.valueOf(user.age)}"
            android:textSize="25sp"
            tools:text="年龄" />
    </LinearLayout>
</layout>