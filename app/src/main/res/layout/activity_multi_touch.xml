<?xml version="1.0" encoding="utf-8"?>
<com.android.playground.ui.widget.touch.MultiTouchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.touch.MultiTouchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="@string/item_multi_touch" />
    </LinearLayout>

</com.android.playground.ui.widget.touch.MultiTouchLayout>